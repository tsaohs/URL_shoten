
<div class="container mt-5" style="width: 50rem">
    <h1>URL shorten</h1>
    {{#if shortURL}}
    <div class="container mt-5" style="width: 40rem">
        <h3>Success! Please use this link:</h3>
        <a href="{{ shortURL }}" target="_blank">
            <h5 id="shortURL">{{ shortURL }}</h5
        ></a>
        <div class="btn-group mt-2" role="group" aria-label="Basic example">
            <button onclick="copyFn()" type="button" class="btn btn-outline-primary mr-3" id="copyURL">Copy</button>
            <a href="/" type="button" class="btn btn-outline-success">Back</a>
        </div>   
    </div>
    {{else}}
    <form action="/short" method="post" class="d-flex flex-column align-items-center">
        <input type="url" class="form-control" name="URL" placeholder="Input URL here..." required>
        <button type="submit" class="btn btn-outline-primary btn-block mt-4" style="width: 25rem">Shorten</button>
    </form>
    {{/if}}
</div>